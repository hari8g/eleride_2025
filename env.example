# App
APP_NAME=eleride-platform-api
ENV=dev

# Security (CHANGE in real deployments)
JWT_SECRET=dev-secret-change-me
JWT_ISSUER=eleride
JWT_AUDIENCE=eleride-rider
ACCESS_TOKEN_TTL_SECONDS=86400

# Data
DATABASE_URL=postgresql+psycopg://postgres:postgres@postgres:5432/eleride
REDIS_URL=redis://redis:6379/0

# SMS (MSG91) — required for OTP in all portals (no dev_otp fallback)
MSG91_API_KEY=
MSG91_OTP_TEMPLATE_ID=
MSG91_SENDER_ID=

# WhatsApp OTP (MSG91 Flow) — recommended fallback when SMS/DLT blocks delivery
# Create a WhatsApp Flow in MSG91. Add a variable named "OTP" (or set MSG91_WHATSAPP_OTP_VAR).
MSG91_WHATSAPP_FLOW_ID=
MSG91_WHATSAPP_OTP_VAR=OTP

# Which channels to try in order for OTP delivery
MSG91_OTP_CHANNEL_ORDER=whatsapp,sms


